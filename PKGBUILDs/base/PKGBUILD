pkgname=base
pkgver=1
pkgrel=1
pkgdesc='A set of packages to define a basic installation of the Browser-Based OS'
url='https://github.com/neizhmak/browser-based-os'
arch=('any')
license=('GPL')
depends=(
  # foundation
  'bbo-filesystem' 'linux-cachyos-bore' 'glibc' 'dinit' 'bbo-dinit-services' 'grub'

  # tools
  'busybox' 'wpa_supplicant' 'bluez' 'alsa-utils'

  # workspace
  'dwl' 'thorium-browser-bin'

  # others
  'libressl' 'linux-firmware' 'licenses' 'libudev-zero' 'mdev-like-a-boss' 'seatd' 'noto-fonts' 'skalibs'
  )

  package() {
    /usr/bin/busybox --install -s
  }

