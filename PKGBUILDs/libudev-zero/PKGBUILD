pkgname=libudev-zero
pkgver=1.0.3
pkgrel=1
pkgdesc='Daemonless replacement for libudev'
url='https://github.com/illiliti/libudev-zero'
source=("https://github.com/illiliti/$pkgname/archive/refs/tags/$pkgver.tar.gz")
arch=(x86_64 arm aarch64)
license=(Apache)
makedepends=(make)
sha256sums=('0bd89b657d62d019598e6c7ed726ff8fed80e8ba092a83b484d66afb80b77da5')

build () {
  cd "$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgver"
  make DESTDIR="$pkgdir" PREFIX=/usr install
}
